<%= form_with(model: book, local:true) do |form| %>

    <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :title %>
    </div>

    <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :author %>
    </div>

    <div class="field">
    <%= form.label :year %>
    <%= form.text_field :year, id: :year %>
    </div>
    
    <div class="actions">
    <%= form.submit %>
    </div>
    
<% end %>